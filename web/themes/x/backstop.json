{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "mobile",
      "width": 320,
      "height": 1200
    },
    {
      "label": "phablet",
      "width": 640,
      "height": 1200
    },
    {
      "label": "tablet",
      "width": 768,
      "height": 768
    },
    {
      "label": "laptop",
      "width": 1024,
      "height": 1024
    },
    {
      "label": "desktop",
      "width": 1208,
      "height": 1208
    }
  ],
  "onBeforeScript": "puppet/onBefore.js",
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Quote embeddable",
      "url": "http://localhost:3000/?p=components-quote",
      "referenceUrl": "http://localhost:3000/?p=components-quote",
      "readyEvent": "",
      "readySelector": "",
      "delay": 0,
      "hideSelectors": ["patternlab-screen-size"],
      "removeSelectors": [],
      "hoverSelector": "",
      "clickSelector": "",
      "postInteractionWait": 0,
      "selectors": ["#sg-viewport"],
      "selectorExpansion": true,
      "expect": 0,
      "misMatchThreshold" : 0.5,
      "requireSameDimensions": true
    }
  ],
  "paths": {
    "bitmaps_reference": "backstop_data/bitmaps_reference",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": true,
  "debugWindow": true
}
