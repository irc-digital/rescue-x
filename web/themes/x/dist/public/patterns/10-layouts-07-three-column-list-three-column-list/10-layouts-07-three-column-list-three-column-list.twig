{% if three_column_list_content %}
  {% set three_column_list_modifiers = three_column_list_modifiers ?: [] %}
  {% set last_row_count = three_column_list_content|length % 3 %}
  {% if last_row_count == 1 %}
    {% set three_column_list_modifiers = three_column_list_modifiers|merge(['last-one']) %}
  {% elseif last_row_count == 2 %}
    {% set three_column_list_modifiers = three_column_list_modifiers|merge(['last-two']) %}
  {% endif %}
<ul class="rpll-three-column-list{% for three_column_list_modifier in three_column_list_modifiers %} rpll-three-column-list--{{ three_column_list_modifier }}{% endfor %}">
{% for three_column_list_item in three_column_list_content %}
  <li class="rpll-three-column-list__item">{{ three_column_list_item }}</li>
{% endfor %}
</ul>
{% endif %}

