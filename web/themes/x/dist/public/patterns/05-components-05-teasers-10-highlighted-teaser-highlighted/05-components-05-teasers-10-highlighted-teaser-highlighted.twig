{#
/**
 * Available variables:
 * - teaser_highlighted_url - The URL of the resource being teased
 * - teaser_highlighted_slug - Slug
 * - teaser_highlighted_title - Title
 * - teaser_highlighted_summary - Summary
 * - teaser_highlighted_cta - Call to action text
 *
 * Available blocks:
 * - teaser_image_block
 * - teaser_text_block
 */
#}
<div class="rplc-teaser-highlighted">
  <a href="{{ teaser_highlighted_url }}" class="rplc-teaser-highlighted__wrapper-link">
    <div class="rplc-teaser-highlighted__image-wrapper">
    {% block teaser_image_block %}
      {% include '@atoms/15-images/10-responsive-image/responsive-image.twig' with {
        responsive_image_source_set: teaser_highlighted_image_source_set,
        responsive_image_sizes: teaser_highlighted_image_sizes,
        responsive_image_fallback: teaser_highlighted_image_fallback,
        responsive_image_alt: teaser_highlighted_image_alt
      } only %}
    {% endblock teaser_image_block %}
    </div>
    <div class="rplc-teaser-highlighted__text-wrapper">
    {% block teaser_text_block %}
      <div class="rplc-teaser-highlighted__slug">{{ teaser_highlighted_slug }}</div>
      <h3 class="rplc-teaser-highlighted__title">{{ teaser_highlighted_title }}</h3>
      <div class="rplc-teaser-highlighted__summary">{{ teaser_highlighted_summary }}</div>
      <div class="rplc-teaser-highlighted__cta">{{ teaser_highlighted_cta }}</div>
    {% endblock teaser_text_block %}
    </div>
  </a>
</div>