{% set responsive_title_modifiers = responsive_title_modifiers ?: [] %}
{% set title_length = responsive_title_text | length %}
{% set responsive_title_modifiers = responsive_title_modifiers|merge([title_length >= 120 ? 'super-long' : title_length >= 80 ? 'very-long' : title_length >= 50 ? 'long' : title_length >= 20 ? 'medium' : 'short']) %}
<h1 class="rpla-responsive-title{% for responsive_title_modifier in responsive_title_modifiers %} rpla-responsive-title--{{ responsive_title_modifier }}{% endfor %}">{{ responsive_title_text }}</h1>
