{#
/**
 * Available variables:
 * - link_text - text
 * - link_url  - the url to link to
 *
 * Available blocks:
 * - none
 */
#}
<{{ link_tag }} {% if link_url %} href="{{ link_url }}" {% endif %} class="rpla-link{% for link_modifier in link_modifiers %} rpla-link--{{ link_modifier }}{% endfor %}">{{ link_text }}</{{ link_tag }}>
