{% if slug_text %}
  <h6 class="rpla-slug{% for slug_modifier in slug_modifiers %} rpla-slug--{{ slug_modifier }}{% endfor %}">
    {%- if not slug_sub_slug_text -%}
      {{- slug_text -}}
    {%- else -%}
      <div class="rpla-slug__slug">{{ slug_text }}</div>
      {% if slug_sub_slug_url %}<a class="rpla-slug__sub-slug-link" href="{{ slug_sub_slug_url }}">{% endif %}
      <div class="rpla-slug__sub-slug">
        <div class="rpla-slug__sub-slug-text">{{ slug_sub_slug_text }}</div>
      </div>
      {% if slug_sub_slug_url %}</a>{% endif %}
    {%- endif -%}
  </h6>
{% endif %}