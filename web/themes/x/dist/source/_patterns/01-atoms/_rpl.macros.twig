{% macro markdown(text, color) %}
  {%- spaceless -%}
    {% import _self as rpl %}

    {% if text is iterable %}
      {% set text %}
        {{ text }}
      {% endset %}
    {% endif %}

    {% set broken_out_text = text | split('*', 3) %}

    {% if  broken_out_text | length == 3 %}
      {{ broken_out_text[0] }}{% include '@atoms/01-text/40-emphasis/emphasis.twig' with { emphasis_text: broken_out_text[1] } only %}{% if broken_out_text[2]|first == ' ' %}{{ ' ' }}{% endif %}{{ rpl.markdown(broken_out_text[2]) }}
    {% else %}
      {{ text }}
    {% endif %}
  {%- endspaceless -%}
{%- endmacro -%}