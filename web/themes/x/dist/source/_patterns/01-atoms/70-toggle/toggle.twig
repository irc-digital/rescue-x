<div class="rpla-toggle" data-rpl-toggle-state="{{ toggle_initial_state | default('collapsed') }}" data-rpl-state-target>
  <div class="rpla-toggle__collapsed-text" data-rpl-state-type="toggle-state" data-rpl-state-values="expanded">
    {{ toggle_collapsed_text }}
  </div>
  <div class="rpla-toggle__expanded-text" data-rpl-state-type="toggle-state" data-rpl-state-values="collapsed">
    {{ toggle_expanded_text }}
  </div>
  <div class="rpla-toggle__content">{{ toggle_content }}</div>
</div>