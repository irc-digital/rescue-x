<div class="sg-buttons">
  {% for type in button_types %}
    <table class="sg-buttons-type">
      <thead><caption class="sg-buttons-type-label">{{ type | replace({'type-': ''}) }}</caption>
      <tr>
        <th></th>
      {% for size in button_sizes %}
        <th>{{ size | replace({'size-': ''}) }}</th>
      {% endfor %}
      </tr>
      </thead>
      <tr>
        <td class="sg-buttons-type-row-label">No icon</td>
        {% for size in button_sizes %}
          <td class="sg-buttons-type-row-cell">{% include '@atoms/05-buttons/button.twig' with { button_text: 'Donate now', button_modifiers: [type, size] } only %}</td>
        {% endfor %}
      <tr>
        <td class="sg-buttons-type-row-label">With icon after</td>
        {% for size in button_sizes %}
          <td class="sg-buttons-type-row-cell">{% include '@atoms/05-buttons/button.twig' with { button_text: 'Donate now', button_icon_name: 'caret-right', button_modifiers: [type, size] } only %}</td>
        {% endfor %}
      </tr>
      <tr>
        <td class="sg-buttons-type-row-label">With icon before</td>
        {% for size in button_sizes %}
          <td class="sg-buttons-type-row-cell">{% include '@atoms/05-buttons/button.twig' with { button_text: 'Donate now', button_icon_name: 'caret-right', button_icon_position: 'before', button_modifiers: [type, size] } only %}</td>
        {% endfor %}
      </tr>
    </table>
  {% endfor %}
</div>