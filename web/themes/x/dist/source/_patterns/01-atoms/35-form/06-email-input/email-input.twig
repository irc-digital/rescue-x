{% spaceless %}

  {% set email_input_modifiers = email_input_modifiers ?: [] %}

  {% set has_type = false %}
  {% for email_input_modifier in email_input_modifiers %}
    {% if email_input_modifier starts with 'type-' %}
      {% set has_type = true %}
    {% endif %}
  {% endfor %}

  {% if not has_type %}
    {% set email_input_modifiers = email_input_modifiers | merge(['type-one']) %}
  {% endif %}

{% endspaceless %}
<div class="rpla-email-input{% for email_input_modifier in email_input_modifiers %} rpla-email-input--{{ email_input_modifier }}{% endfor %}">
  <label class="rpla-email-input__label" for="{{ email_input_name }}">{{ email_input_label }}</label>
  <input class="rpla-email-input__field" type="email" name="{{ email_input_name }}"{% if email_input_default_value %} value="{{ email_input_default_value }}"{% endif %}{% if email_input_placeholder %} placeholder="{{ email_input_placeholder }}"{% endif %}{% if email_input_required %} required{% endif %}>
</div>