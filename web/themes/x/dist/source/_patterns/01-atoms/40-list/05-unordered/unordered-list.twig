{% spaceless %}
  {% set unordered_list_modifiers = unordered_list_modifiers ?: [] %}

  {% set is_plain_text = true %}
  {% for unordered_list_item in unordered_list_items %}
    {% if (unordered_list_item | striptags) != unordered_list_item %}
      {% set is_plain_text = false %}
    {% endif %}
  {% endfor %}

  {% if not is_plain_text %}
    {% set unordered_list_modifiers = unordered_list_modifiers | merge(['contains-markup']) %}
  {% endif %}

{% endspaceless %}
<ul class="rpla-unordered-list{% for unordered_list_modifier in unordered_list_modifiers %} rpla-unordered-list--{{ unordered_list_modifier }}{% endfor %}">
  {% for unordered_list_item in unordered_list_items %}
    <li class="rpla-unordered-list__item">{% block list_item_block %}{{ unordered_list_item }}{% endblock %}</li>
  {% endfor %}
</ul>