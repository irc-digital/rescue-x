<div class="rpll-hero-layout-3{% for hero_layout_3_modifier in hero_layout_3_modifiers %} rpll-hero-layout-3--{{ hero_layout_3_modifier }}{% endfor %}">
  <div class="rpll-hero-layout-3__background-wrapper">
    {% block hero_layout_3_background_block %}
      {{ hero_layout_3_background }}
    {% endblock %}
  </div>
  <div class="rpll-hero-layout-3__outer-text-wrapper">
    <div class="rpll-hero-layout-3__text-wrapper">
      <div class="rpll-hero-layout-3__primary">
        {% block hero_layout_3_primary_block %}
          {{ hero_layout_3_primary }}
        {% endblock %}
      </div>
      <div class="rpll-hero-layout-3__secondary">
        {% block hero_layout_3_secondary_block %}
          {{ hero_layout_3_secondary }}
        {% endblock %}
      </div>
    </div>
  </div>
</div>