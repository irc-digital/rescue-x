{% spaceless %}

  {% set page_modifiers = page_modifiers ?: [] %}
  {% set page_hero_flush_with_top = page_hero_flush_with_top ? 'yes' : 'no' %}

{% endspaceless %}
{% if page_header is not empty %}
  <div class="rpll-page__header-wrapper">
    {{ page_header }}
  </div>
{% endif %}
<div class="rpll-page{% for page_modifier in page_modifiers %} rpll-page--{{ page_modifier }}{% endfor %}" data-rpl-hero-flush-with-top="{{ page_hero_flush_with_top }}">

  {{ page_navigation }}

  <div class="rpll-page__hero-wrapper">
    {{ page_hero }}
  </div>

  <main class="rpll-page__main" role="main" tabindex="-1">
    {{ page_content }}
  </main>
  <script type="text/javascript">
    var first_element = document.getElementsByClassName('rpll-page__main')[0].firstElementChild;;
    if (typeof first_element.dataset.rplCanvasColor !== 'undefined') {
      document.getElementsByClassName('rpll-page__hero-wrapper')[0].dataset.rplCanvasColor = first_element.dataset.rplCanvasColor;
    }
  </script>

  {% if page_content_footer is not empty %}
    <div class="rpll-page__content-footer">
      {{ page_content_footer }}
    </div>
  {% endif %}

  {% if page_footer is not empty %}
    <div class="rpll-page__footer">
      {{ page_footer }}
    </div>
  {% endif %}

  {% if page_sticky_footer is not empty %}
    {{ page_sticky_footer }}
  {% endif %}

</div>
<div class="rpll-page__overlay"></div>
{% include '@components/77-modals/05-search/search-modal.twig' %}