{% spaceless %}

  {% set page_modifiers = page_modifiers ?: [] %}

{% endspaceless %}
{% set page_header_rendered %}
  {{ page_header }}
{% endset %}
{%- if page_header_rendered | trim is not empty -%}
  <div class="rpll-page__header-wrapper">
    {{ page_header_rendered }}
  </div>
{%- endif -%}
<div class="rpll-page{% for page_modifier in page_modifiers %} rpll-page--{{ page_modifier }}{% endfor %}">

  {{ page_navigation }}

  {% set page_hero_rendered %}
    {{ page_hero }}
  {% endset %}
  {%- if page_hero_rendered | trim is not empty -%}
    <div class="rpll-page__hero-wrapper">
      {{ page_hero_rendered }}
    </div>
  {%- endif -%}

  <main class="rpll-page__main" role="main" tabindex="-1">
    {{ page_content }}
  </main>
  <script type="text/javascript">
    var first_element = document.getElementsByClassName('rpll-page__main')[0].firstElementChild;;
    if (typeof first_element.dataset.rplCanvasColor !== 'undefined') {
      document.getElementsByClassName('rpll-page__hero-wrapper')[0].dataset.rplCanvasColor = first_element.dataset.rplCanvasColor;
    }
  </script>

  {% set page_content_footer_rendered %}
    {{ page_content_footer }}
  {% endset %}
  {% if page_content_footer_rendered | trim is not empty %}
    <div class="rpll-page__content-footer">
      {{ page_content_footer_rendered }}
    </div>
  {% endif %}

  {% set page_footer_rendered %}
    {{ page_footer }}
  {% endset %}
  {% if page_footer_rendered | trim is not empty %}
    <div class="rpll-page__footer">
      {{ page_footer_rendered }}
    </div>
  {% endif %}

  {% set page_sticky_footer_rendered %}
    {{ page_sticky_footer }}
  {% endset %}
  {% if page_sticky_footer_rendered | trim is not empty %}
    {{ page_sticky_footer_rendered }}
  {% endif %}

</div>
<div class="rpll-page__overlay"></div>
{% include '@components/45-modals/05-search/search-modal.twig' %}