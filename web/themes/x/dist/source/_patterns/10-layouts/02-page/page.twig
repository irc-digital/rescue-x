{% spaceless %}

  {% set page_modifiers = page_modifiers ?: [] %}
  {% set page_hero_has_image = page_hero_has_image ?: 'no' %}

{% endspaceless %}
<div class="rpll-page{% for page_modifier in page_modifiers %} rpll-page--{{ page_modifier }}{% endfor %}" data-rpl-hero-has-image="{{ page_hero_has_image }}">
  {{ page_header }}

  {{ page_navigation }}

  {{ page_hero }}

  <main class="rpll-page__main" role="main" tabindex="-1">
    {{ page_content }}
  </main>

  {% if page_content_footer is not empty %}
    <div class="rpll-page__content-footer">
      {{ page_content_footer }}
    </div>
  {% endif %}

  {% if page_footer is not empty %}
    <div class="rpll-page__footer">
      {{ page_footer }}
    </div>
  {% endif %}
</div>
<div class="rpll-page__overlay"></div>