{% spaceless %}
  {% set two_column_list_modifiers = two_column_list_modifiers ?: [] %}

  {% set has_respond = false %}
  {% for two_column_list_modifier in two_column_list_modifiers %}
    {% if two_column_list_modifier starts with 'respond-' %}
      {% set has_respond = true %}
    {% endif %}
  {% endfor %}

  {% if not has_respond %}
    {% set two_column_list_modifiers = two_column_list_modifiers | merge(['respond-laptop']) %}
  {% endif %}

  {% if two_column_list_content %}
  <ul class="rpll-two-column-list{% for two_column_list_modifier in two_column_list_modifiers %} rpll-two-column-list--{{ two_column_list_modifier }}{% endfor %}">
  {% for two_column_list_item in two_column_list_content %}
    <li class="rpll-two-column-list__item">{{ two_column_list_item }}</li>
  {% endfor %}
  </ul>
  {% endif %}
{% endspaceless %}
