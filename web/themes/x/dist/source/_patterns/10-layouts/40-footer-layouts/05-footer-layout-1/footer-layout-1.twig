{#
/**
 * Footer layout 1
 *
 * Available blocks:
 *   footer_layout_1_section_1_block - Top section of the upper footer
 *   footer_layout_1_section_2_block - Middle section of the upper footer
 *   footer_layout_1_section_3_block - Bottom section of the upper footer
 */
#}
<div class="rpll-footer-layout-1">
  <div class="rpll-footer-layout-1__inner-content-wrapper">
    <div class="rpll-footer-layout-1__section">
      {% block footer_layout_1_section_1_block %}
        {{ footer_layout_1_section_1 }}
      {% endblock %}
    </div>
    <div class="rpll-footer-layout-1__section">
      {% block footer_layout_1_section_2_block %}
        {{ footer_layout_1_section_2 }}
      {% endblock %}
    </div>
    <div class="rpll-footer-layout-1__section">
      {% block footer_layout_1_section_3_block %}
        {{ footer_layout_1_section_3 }}
      {% endblock %}
    </div>
  </div>
</div>
