<div class="rpll-slider-layout-1{% for slider_layout_1_modifier in slider_layout_1_modifiers %} rpll-slider-layout-1--{{ slider_layout_1_modifier }}{% endfor %}">
  <div class="rpll-slider-layout-1__previous">
    {% include '@atoms/16-icon-only-link/icon-only-link.twig' with {
      icon_only_link_alt_text: ('Previous' | trans),
      icon_only_link_name: 'caret-left',
    } only %}
  </div>
  <div class="rpll-slider-layout-1__slides-wrapper">
    <div class="rpll-slider-layout-1__slides">
      {% block slider_layout_1_slides_block %}
        {{ slider_layout_1_slides }}
      {% endblock %}
      <div class="rpll-slider-layout-1__pager">
        {% block slider_layout_1_slides_pager %}
          {{ slider_layout_1_pager }}
        {% endblock %}
      </div>
    </div>
  </div>

  <div class="rpll-slider-layout-1__next">
    {% include '@atoms/16-icon-only-link/icon-only-link.twig' with {
      icon_only_link_alt_text: ('Next' | trans),
      icon_only_link_name: 'caret-right',
    } only %}
  </div>
</div>