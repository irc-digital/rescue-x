{#
/**
 * Slider layout 2
 *
 * Available variables:
 *   slider_layout_2_slides - Array of slide content
 */
#}
<div class="rpll-slider-layout-2">
  <div class="rpll-slider-layout-2__slides-wrapper">
    <div class="rpll-slider-layout-2__previous" data-rpl-slider-previous>
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-left',
        icon_modifiers: ['fill-branded'],
      } only %}
    </div>
    <div class="rpll-slider-layout-2__slides" data-rpl-slider-pager data-rpl-slider-slides data-rpl-slider-speed="{{ slider_layout_2_speed | default('300') }}" data-rpl-slider-responsive='[{"breakpoint":"640", "settings":"unslick"}]'>
      {% for slider_layout_2_slide_info in slider_layout_2_slides %}
        {% set slide_count = loop.index %}
        {% set slide_pager %}
          {% include '@molecules/53-pagers/05-pager-items/10-pager-item-2/pager-item-2.twig' with {
            pager_item_2_title: slide_count,
          } only %}
        {% endset %}
        <div class="rpll-slider-layout-2__slide" data-rpl-slider-slide-pager-item="{{ slide_pager | escape('html') }}">{{ slider_layout_2_slide_info.slide }}</div>
      {% endfor %}
    </div>
    <div class="rpll-slider-layout-2__next" data-rpl-slider-next>
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-right',
        icon_modifiers: ['fill-branded'],
      } only %}
    </div>
  </div>
</div>