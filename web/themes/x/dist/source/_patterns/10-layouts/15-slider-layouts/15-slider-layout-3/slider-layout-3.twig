{#
/**
 * Available variables:
 *   slider_layout_3_slides - An array of slide content.
 */
#}
<div class="rpll-slider-layout-3">
  <div class="rpll-slider-layout-3__slides-wrapper">
    <div class="rpll-slider-layout-3__previous" data-rpl-slider-previous>
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-left',
      } only %}
    </div>
    <div class="rpll-slider-layout-3__slides" data-rpl-slider-slides data-rpl-slider-slides-to-show="{{ slider_layout_3_slides_to_show | default('3') }}" data-rpl-slider-speed="{{ slider_layout_3_speed | default('300') }}" data-rpl-slider-responsive='{{ slider_layout_3_responsive | default('[]') }}'>
      {% for slider_layout_3_slide in slider_layout_3_slides %}
        <div class="rpll-slider-layout-3__slide">{{ slider_layout_3_slide }}</div>
      {% endfor %}
    </div>
    <div class="rpll-slider-layout-3__next" data-rpl-slider-next>
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-right',
      } only %}
    </div>
  </div>
</div>
