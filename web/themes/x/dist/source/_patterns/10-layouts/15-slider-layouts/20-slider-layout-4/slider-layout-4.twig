{#
/**
 * Slider layout 4
 *
 * Available variables:
 *   slider_layout_4_slides - Array of slide content
 */
#}
<div class="rpll-slider-layout-4">
  <div class="rpll-slider-layout-4__slides-wrapper">
    <div class="rpll-slider-layout-4__previous" data-rpl-slider-previous>
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-left',
      } only %}
    </div>
    <div class="rpll-slider-layout-4__slides" data-rpl-slider-slides data-rpl-slider-speed="1000" data-rpl-slider-fade data-rpl-slider-responsive='{{ slider_layout_4_responsive | default('[]') }}'>
      {% for slider_layout_4_slide in slider_layout_4_slides %}
        <div class="rpll-slider-layout-4__slide-wrapper">
          <div class="rpll-slider-layout-4__slide">
            {{ slider_layout_4_slide }}
          </div>
          <div class="rpll-slider-layout-4__counter">
            <span class="rpll-slider-layout-4__count-active">{{ loop.index }}</span> {{ " of " | trans }} <span class="rpll-slider-layout-4__count-total">{{ slider_layout_4_slides|length }}</span>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="rpll-slider-layout-4__next" data-rpl-slider-next>
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-right',
      } only %}
    </div>
  </div>
</div>
