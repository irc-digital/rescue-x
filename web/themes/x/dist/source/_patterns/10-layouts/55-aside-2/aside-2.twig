{% spaceless %}

  {% set aside_2_modifiers = aside_2_modifiers ?: [] %}

  {% set has_position = false %}
  {% for aside_2_modifier in aside_2_modifiers %}
    {% if aside_2_modifier starts with 'position-' %}
      {% set has_position = true %}
    {% endif %}
  {% endfor %}

  {% if not has_position %}
    {% set aside_2_modifiers = aside_2_modifiers | merge (['position-right']) %}
  {% endif %}

{% endspaceless %}
<aside class="rpll-aside-2{% for aside_2_modifier in aside_2_modifiers %} rpll-aside-2--{{ aside_2_modifier }}{% endfor %}">
  <div class="rpll-aside-2__inner-wrapper">
    {{ aside_2_content }}
  </div>
</aside>