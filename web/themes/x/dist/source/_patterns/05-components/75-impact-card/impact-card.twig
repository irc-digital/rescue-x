{#
/**
 * Available variables:
 * - impact_card_heading_title -
 The title in the optional card heading
 * - impact_card_heading_description -Description in the optional card heading
 * Available blocks:
 * - none
 */
#}
<div class="rplc-impact-card{% for impact_card_modifier in impact_card_modifiers %} rplc-impact-card--{{ impact_card_modifier }}{% endfor %}">
  <div class="rplc-impact-card__inner-wrapper">
    <div class="rplc-impact-card__heading-text-wrapper">
      <h3 class="rplc-impact-card__heading-title">{{impact_card_heading_title}}</h3>
      <p class="rplc-impact-card__heading-description">{{impact_card_heading_description}}</p>
    </div>
    <div class="rplc-impact-card__scene">
      <div class="rplc-impact-card__card">
        <div class="rplc-impact-card__front">
          <h3 class="rplc-impact-card__front-figure">{{impact_card_front_figure}}</h3>
           <p  class="rplc-impact-card__front-description">{{impact_card_front_description}}</p>
           <div class="rplc-impact-card__icon-link-wrapper" data-rpl-state-type="show-card-side" data-rpl-state-values="rear">
              {% include '@atoms/16-icon-only-link/icon-only-link.twig' with {
                icon_only_link_name: 'flip'
              } only %}
            </div>
        </div>
        <div class="rplc-impact-card__rear">
          <p class="rplc-impact-card__rear-description">{{impact_card_rear_description}}</p>
          {% include '@atoms/10-link/link.twig' with {
            link_text: impact_card_rear_link_text,
            link_url: impact_card_rear_link_url,
            link_modifiers: ['type-two', 'subtype-no-hover-effect'],
          } only %}
          <div class="rplc-impact-card__icon-link-wrapper" data-rpl-state-type="show-card-side" data-rpl-state-values="front">
            {% include '@atoms/16-icon-only-link/icon-only-link.twig' with {
              icon_only_link_name: 'flip',
              icon_only_link_modifiers: ['subtype-inverse'],
            } only %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>