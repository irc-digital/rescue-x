{#
/**
 * Available variables:
 * - pull_quote_text - The text of the pull quote
 * - pull_quote_section_heading_title - Section title
 * - pull_quote_section_heading_description - Section description
 * - pull_quote_modifiers - The variation of the pull quote (if left or right are omitted the quote goes full well width)
 *           placement-left
 *           placement-right
 * Available blocks:
 * - none
 */
#}
<div class="rplc-pull-quote{% for pull_quote_modifier in pull_quote_modifiers %} rplc-pull-quote--{{ pull_quote_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: pull_quote_section_heading_title,
    section_heading_description: pull_quote_section_heading_description,
    section_heading_icon: pull_quote_section_heading_icon
  } only %}
  <div class="rplc-pull-quote__content">
      <blockquote class="rplc-pull-quote__text-wrapper">
        <div class="rplc-pull-quote__icon-wrapper">
          {% include '@atoms/05-icon/icon.twig' with {
            icon_name: 'quote-mark',
            icon_modifiers: ['fill-branded']
          } only %}
        </div>
        <p class="rplc-pull-quote__text">{{ pull_quote_text }}</p>
      </blockquote>
  </div>
</div>