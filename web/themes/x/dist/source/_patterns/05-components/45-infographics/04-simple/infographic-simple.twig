{#
/**
 * Infographic simple
 *
 * Available variables:
 *   infographic_simple_section_heading_title - Title text above the component
 *   infographic_simple_section_heading_description - Short description of component content
 *   infographic_simple_section_heading_icon - Optional icon displayed in front of the title
  *   infographic_simple_content - An array of teaser icon components making up the content of the infographic
 */
#}
{% if infographic_simple_content %}
<div class="rplc-infographic-simple">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: infographic_simple_section_heading_title,
    section_heading_description: infographic_simple_section_heading_description,
    section_heading_icon: infographic_simple_section_heading_icon
  } only %}
  <div class="rplc-infographic-simple__content">
    {% include '@layouts/10-four-column-list/four-column-list.twig' with {
      four_column_list_content: infographic_simple_content
    } only %}
  </div>
</div>
{% endif %}