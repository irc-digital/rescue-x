{% if infographic_standard_content %}
<div class="rplc-infographic-standard{% for infographic_standard_modifier in infographic_standard_modifiers %} rplc-infographic-standard--{{ infographic_standard_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: infographic_standard_section_heading_title,
    section_heading_description: infographic_standard_section_heading_description,
    section_heading_icon: infographic_standard_section_heading_icon
  } only %}
  <div class="rplc-infographic-standard__content">
    {% include '@layouts/10-four-column-list/four-column-list.twig' with {
      four_column_list_content: infographic_standard_content
    } only %}
  </div>
</div>
{% endif %}