{#
/**
 * Available variables:
 *   infographic_standard_section_heading_title - Title text above the component.
 *   infographic_standard_section_heading_description - Short description of component content.
 *   infographic_standard_section_heading_icon - Optional icon displayed in front of the title.
 *   infographic_standard_content - An array of teaser icon components making up the content of the infographic.
 */
#}
{% if infographic_standard_content %}
<div class="rplc-infographic-standard" data-rpl-canvas-color="neutral-light-gray">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: infographic_standard_section_heading_title,
    section_heading_description: infographic_standard_section_heading_description,
    section_heading_icon: infographic_standard_section_heading_icon
  } only %}
  <div class="rplc-infographic-standard__content">
    {% include '@layouts/10-four-column-list/four-column-list.twig' with {
      four_column_list_content: infographic_standard_content
    } only %}
  </div>
</div>
{% endif %}