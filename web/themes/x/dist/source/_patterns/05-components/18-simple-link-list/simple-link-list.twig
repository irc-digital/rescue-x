{% if simple_link_list_content %}
<div{% if simple_link_list_id  %} id="{{ simple_link_list_id }}"{% endif %} class="rplc-simple-link-list">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: simple_link_section_heading_title,
    section_heading_description: simple_link_section_heading_description,
    section_heading_icon: simple_link_section_heading_icon
  } only %}
  <div class="rplc-simple-link-list__content">
    {% include '@layouts/05-two-column-list/two-column-list.twig' with {
      two_column_list_content: simple_link_list_content,
      two_column_list_modifiers: ["plus-separators"]
    } only %}
  </div>
</div>
{% endif %}