{#
/**
 * More videos
 *
 * Available variables:
 *   more_videos_section_heading_title - Title text above the component
 *   more_videos_section_heading_icon - Optional icon displayed in front of the title
 *   more_videos_section_heading_description - Short description of component content
 *   more_videos_items - Array of teaser thumb components making up the slider
 */
#}
<div class="rplc-more-videos">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: more_videos_section_heading_title,
    section_heading_description: more_videos_section_heading_description,
    section_heading_icon: more_videos_section_heading_icon,
  } only %}

  <div class="rplc-more-videos__content">
    {% embed '@layouts/15-slider-layouts/15-slider-layout-3/slider-layout-3.twig' with {
      slider_layout_3_slides: more_videos_items,
      slider_layout_3_slides_to_show: 0,
      slider_layout_3_responsive: '[{"breakpoint": 100000, "settings":{ "slidesToShow": 5 }}, {"breakpoint": 1180, "settings":{ "slidesToShow": 4 }}, {"breakpoint": 960, "settings":{ "slidesToShow": 3 }}, {"breakpoint": 750, "settings":{ "slidesToShow": 2 }}, {"breakpoint": 530, "settings":{ "slidesToShow": 1 }}]',
    } %}
    {% endembed %}
  </div>
</div>
