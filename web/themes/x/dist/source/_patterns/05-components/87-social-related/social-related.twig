{% spaceless %}

  {% if has_social_related_social is empty %}
    {% set has_social_related_social = social_related_social is not empty %}
  {% endif %}

  {% if has_social_related_related is empty %}
    {% set has_social_related_related = social_related_related is not empty %}
  {% endif %}

{% endspaceless %}
<div class="rplc-social-related{% for social_related_modifier in social_related_modifiers %} rplc-social-related--{{ social_related_modifier }}{% endfor %}">
  <div class="rplc-social-related__content">
    {% if has_social_related_social %}
      <div class="rplc-social-related__social">
        {% block social_related_social_block %}
          {{ social_related_social }}
        {% endblock social_related_social_block %}
      </div>
    {% endif %}
    {% if has_social_related_related %}
      <div class="rplc-social-related__related">
        {% block social_related_related_block %}
          {{ social_related_related }}
        {% endblock social_related_related_block %}
      </div>
    {% endif %}
  </div>
</div>

