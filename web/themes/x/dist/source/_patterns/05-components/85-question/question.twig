<div class="rplc-question">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: question_section_heading_title,
    section_heading_description: question_section_heading_description,
    section_heading_icon: question_section_heading_icon
  } only %}
  <div class="rplc-question__content">
    {% include '@molecules/60-ear/ear.twig' with {
      ear_icon: 'question',
    } only %}
    <div class="rplc-question__text-wrapper">
      <div class="rplc-question__question-wrapper">
        {% if question_prefix %}
          <div class="rplc-question__prefix">{{ question_prefix }}</div>
        {% endif  %}

        <div class="rplc-question__question">{{ question_text }}</div>
      </div>
      <ul class="rplc-question__answer-options">
        {% for question_answer_option in question_answer_options %}
          <li class="rplc-question__answer-option">{{ question_answer_option }}</li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>