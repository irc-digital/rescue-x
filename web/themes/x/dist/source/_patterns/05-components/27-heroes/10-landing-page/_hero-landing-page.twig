<div class="rplc-hero-landing-page{% for hero_landing_page_modifier in hero_landing_page_modifiers %} rplc-hero-landing-page--{{ hero_landing_page_modifier }}{% endfor %}">
  <div class="rplc-hero-landing-page__content">
    {% set hero_landing_page_secondary_content %}
      {% block hero_landing_page_secondary_block %}{% endblock %}
    {% endset %}
    {% embed '@layouts/30-hero-layouts/10-hero-layout-2/hero-layout-2.twig' %}
      {% if hero_landing_page_art_directed_image_sources is not empty %}
        {% block hero_layout_2_image_block %}
          {% include '@atoms/54-art-directed-image/art-directed-image.twig' with {
            art_directed_image_fallback: hero_landing_page_art_directed_image_fallback,
            art_directed_image_sources: hero_landing_page_art_directed_image_sources,
            art_directed_image_alt: hero_landing_page_art_directed_image_alt,
            art_directed_image_modifiers: ['permit-upscaling'],
            hero_landing_page_secondary_content: hero_landing_page_secondary_content,
          } only %}
        {% endblock %}
      {% endif %}
      {% block hero_layout_2_primary_block %}
        {% include '@molecules/02-basic-headline-treatments/15-stacked-3/stacked-headline-3.twig' with {
          stacked_headline_3_headline: hero_landing_page_headline,
          stacked_headline_3_slug: hero_landing_page_slug,
          stacked_headline_3_social_share_sites: hero_landing_page_social_share_sites,
          stacked_headline_3_crisis_mode: hero_landing_page_crisis_mode,
        } only %}
      {% endblock %}
      {% block hero_layout_2_secondary_block %}
        {{ hero_landing_page_secondary_content }}
      {% endblock %}
    {% endembed %}
  </div>
</div>
