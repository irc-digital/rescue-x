<div class="rplc-hero-b-roll{% for hero_b_roll_modifier in hero_b_roll_modifiers %} rplc-hero-b-roll--{{ hero_b_roll_modifier }}{% endfor %}" data-rpl-hero-flush-with-top="yes">
  <div class="rplc-hero-b-roll__content">
    <div class="rplc-hero-b-roll__video-wrapper">
      {% include '@molecules/80-b-roll/b-roll.twig' with {
        b_roll_image_alt: hero_b_roll_image_alt,
        b_roll_image_url_mobile: hero_b_roll_image_url_mobile,
        b_roll_video_url_mobile: hero_b_roll_video_url_mobile,
        b_roll_image_url_desktop: hero_b_roll_image_url_desktop,
        b_roll_video_url_desktop: hero_b_roll_video_url_desktop,
      } only %}
    </div>
    <div class="rplc-hero-b-roll__text-wrapper">
      {% block b_roll_text_block %}
      {% endblock %}
    </div>
  </div>
</div>



