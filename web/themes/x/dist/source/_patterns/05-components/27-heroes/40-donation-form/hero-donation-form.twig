{% set layout_modifiers = ['has-image', '50-50'] %}
<div class="rplc-hero-donation-form{% for hero_donation_form_modifier in hero_donation_form_modifiers %} rplc-hero-donation-form--{{ hero_donation_form_modifier }}{% endfor %}">
  <div class="rplc-hero-donation_form__content">
    {% embed '@layouts/30-hero-layouts/05-hero-layout-1/hero-layout-1.twig' with { hero_layout_1_modifiers : layout_modifiers } %}
      {% if hero_donation_form_art_directed_image_sources is not empty %}
        {% block hero_layout_1_image_block %}
          {% include '@atoms/54-art-directed-image/art-directed-image.twig' with {
            art_directed_image_fallback: hero_donation_form_art_directed_image_fallback,
            art_directed_image_sources: hero_donation_form_art_directed_image_sources,
            art_directed_image_alt: hero_donation_form_art_directed_image_alt,
            art_directed_image_modifiers: ['permit-upscaling'],
          } only %}
        {% endblock %}
      {% endif %}
      {% block hero_layout_1_primary_1_block %}
        {% include '@molecules/02-basic-headline-treatments/20-stacked-4/stacked-headline-4.twig' with {
          stacked_headline_4_headline: hero_donation_form_headline,
          stacked_headline_4_slug: hero_donation_form_slug,
          stacked_headline_4_summary: hero_donation_form_summary,
          stacked_headline_4_link_title: hero_donation_form_link_title,
          stacked_headline_4_link_url: hero_donation_form_link_url,
        } only %}
      {% endblock %}
      {% block hero_layout_1_secondary_1_block %}
        {% include '@molecules/70-form/05-donation-teaser/donation-teaser.twig' with {
          donation_teaser_text: hero_donation_form_donation_text,
          donation_teaser_donation_input_name: hero_donation_form_donation_input_name,
          donation_teaser_donation_input_label: hero_donation_form_donation_input_label,
          donation_teaser_donation_input_placeholder: hero_donation_form_donation_input_placeholder,
          donation_teaser_donation_input_default_value: hero_donation_form_donation_input_default_value,
          donation_teaser_donation_input_prefix: hero_donation_form_donation_input_prefix,
          donation_teaser_donation_input_suffix: hero_donation_form_donation_input_suffix,
          donation_teaser_buttons: hero_donation_form_donation_buttons,
        } only %}
      {% endblock %}
    {% endembed %}
  </div>
</div>