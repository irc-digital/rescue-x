<div class="rplc-hero-text-with-links{% for hero_text_with_links_modifier in hero_text_with_links_modifiers %} rplc-hero-text-with-links--{{ hero_text_with_links_modifier }}{% endfor %}">
  <div class="rplc-hero-text-with-links__content">
    <div class="rplc-hero-text-with-links__slug-wrapper">
      <h6 class="rplc-hero-text-with-links__slug">{{ hero_text_with_links_slug }}</h6>
    </div>
    {% include '@atoms/02-responsive-title/responsive-title.twig' with { responsive_title_text: hero_text_with_links_headline } only %}
    <div class="rplc-hero-text-with-links__description-links-wrapper">
      <div class="rplc-hero-text-with-links__description">{{ hero_text_with_links_description }}</div>
      {% if hero_text_with_links_links is not empty %}
        <ul class="rplc-hero-text-with-links__link-list">
        {% for hero_text_with_links_link in hero_text_with_links_links %}
          <li class="rplc-hero-text-with-links__link-list-item">{{ hero_text_with_links_link }}</li>
        {% endfor %}
        </ul>
      {% endif %}
    </div>
  </div>
</div>

