<div class="rplc-quote{% for quote_modifier in quote_modifiers %} rplc-quote--{{ quote_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: quote_section_heading_title,
    section_heading_description: quote_section_heading_description,
    section_heading_icon: quote_section_heading_icon,
  } only %}
  <div class="rplc-quote__content">
    <div class="rplc-quote__image-text-wrapper">
      <div class="rplc-quote__image-wrapper">
        {% include '@atoms/15-images/10-responsive-image/responsive-image.twig' with {
          responsive_image_source_set: quote_responsive_image_source_set,
          responsive_image_sizes: quote_responsive_image_sizes,
          responsive_image_fallback: quote_responsive_image_fallback,
          responsive_image_alt: quote_responsive_image_alt
        } only %}
      </div>

      <div class="rplc-quote__text-wrapper">
        <div class="rplc-quote__icon-wrapper">
          {% include '@atoms/15-images/20-icon/icon.twig' with {
            icon_name: 'quote-mark',
            icon_modifiers: ['fill-branded']
          } only %}
        </div>
        <div class="rplc-quote__text-inner-wrapper">
          <blockquote class="rplc-quote__quote">
            <p class="rplc-quote__quote-text">{{ quote_text }}</p>
            <div class="rplc-quote__attribution">
              <div class="rplc-quote__attributed-person">{{ quote_attribution }}</div>
              <div class="rplc-quote__attributed-person-role">{{ quote_attribution_role }}</div>
            </div>
          </blockquote>

          {% include '@atoms/03-links/05-link/link.twig' with {
            link_url: quote_url,
            link_text: quote_cta,
          } only %}
        </div>

      </div>
    </div>
  </div>
</div>


