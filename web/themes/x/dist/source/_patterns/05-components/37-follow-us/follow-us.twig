{#
/**
 * Available variables:
 *   follow_us_title - Title text above the component.
 *   follow_us_social_share_sites - An array of social share sites for the social share molecule.
 */
#}
<div class="rplc-follow-us">
  {% set follow_us_title = (follow_us_title | default('Follow us')) | trans %}
  {% include '@molecules/50-social-share/social-share.twig' with {
    social_share_title: follow_us_title,
    social_share_sites: follow_us_social_share_sites,
    social_share_modifiers: ['title-bold'],
  } only %}
</div>