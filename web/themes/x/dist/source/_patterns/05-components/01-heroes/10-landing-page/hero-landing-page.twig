<div class="rplc-hero-landing-page{% for hero_landing_page_modifier in hero_landing_page_modifies %} rplc-hero-landing-page--{{ hero_landing_page_modifier }}{% endfor %}">
  <div class="rplc-hero-landing-page__content">
    {% embed '@layouts/30-hero-layouts/10-hero-layout-2/hero-layout-2.twig' %}
      {% if hero_landing_page_art_directed_image_sources is not empty %}
        {% block hero_layout_2_image_block %}
          {% include '@atoms/50-images/15-art-directed-image/art-directed-image.twig' with {
            art_directed_image_fallback: hero_landing_page_art_directed_image_fallback,
            art_directed_image_sources: hero_landing_page_art_directed_image_sources,
            art_directed_image_alt: hero_landing_page_art_directed_image_alt
          } only %}
        {% endblock %}
      {% endif %}
      {% block hero_layout_2_primary_block %}
        {% if hero_landing_page_slug %}
          <div class="rplc-hero-landing-page__slug-wrapper">
            <h6 class="rplc-hero-landing-page__slug">{{ hero_landing_page_slug }}</h6>
          </div>
        {% endif %}
        <div class="rplc-hero-landing-page__title-crisis-wrapper">
          <div class="rplc-hero-landing-page__title-wrapper">{% include '@atoms/02-responsive-title/responsive-title.twig' with { responsive_title_text: hero_landing_page_headline} %}</div>
          {% if hero_landing_page_crisis_watch %}
            {% include '@molecules/30-crisis-watch/crisis-watch.twig' %}
          {% endif %}
          </div>
        </div>
        {% if hero_landing_page_social %}{{ hero_landing_page_social }}{% endif %}
      {% endblock %}
      {% block hero_layout_2_secondary_block %}
        {{ hero_landing_page_secondary_block }}
      {% endblock %}
    {% endembed %}
  </div>
</div>