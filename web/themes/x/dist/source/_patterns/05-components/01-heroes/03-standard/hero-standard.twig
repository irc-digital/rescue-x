{% set layout_modifiers = ['no-second-blocks'] | merge (hero_standard_art_directed_image_sources is not empty ? ['has-image'] : ['no-image']) %}
<div class="rplc-hero-standard{% for hero_standard_modifier in hero_standard_modifiers %} rplc-hero-standard--{{ hero_standard_modifier }}{% endfor %}">
  <div class="rplc-hero-standard__content">
    <a class="rplc-hero-standard__link-wrapper" href="#">
    {% embed '@layouts/30-hero-layouts/05-hero-layout-1/hero-layout-1.twig' with { hero_layout_1_modifiers : layout_modifiers } %}
      {% if hero_standard_art_directed_image_sources is not empty %}
        {% block hero_layout_1_image_block %}
          {% include '@atoms/50-images/15-art-directed-image/art-directed-image.twig' with {
            art_directed_image_fallback: hero_standard_art_directed_image_fallback,
            art_directed_image_sources: hero_standard_art_directed_image_sources,
            art_directed_image_alt: hero_standard_art_directed_image_alt
          } only %}
        {% endblock %}
      {% endif %}
      {% block hero_layout_1_primary_1_block %}
        {% if hero_standard_slug %}
          <div class="rplc-hero-standard__slug-wrapper">
            <h6 class="rplc-hero-standard__slug">{{ hero_standard_slug }}</h6>
          </div>
        {% endif %}
        {% include '@atoms/02-responsive-title/responsive-title.twig' with { responsive_title_text: hero_standard_headline} %}
        {% if hero_standard_description %}<h2 class="rplc-hero-standard__description">{{ hero_standard_description }}</h2>{% endif %}
      {% endblock %}
      {% block hero_layout_1_secondary_1_block %}
        LINK HERE
      {% endblock %}
    {% endembed %}
    </a>
  </div>
</div>