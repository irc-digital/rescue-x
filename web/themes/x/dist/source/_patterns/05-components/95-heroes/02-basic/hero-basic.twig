{% set hero_basic_modifiers = hero_basic_modifiers ?: [] %}
{% set layout_modifiers = hero_basic_modifiers | merge(['no-image', 'no-second-blocks']) %}
<div class="rplc-hero-basic{% for hero_basic_modifier in hero_basic_modifiers %} rplc-hero-basic--{{ hero_basic_modifier }}{% endfor %}">
  <div class="rplc-hero-basic__content">
    {% embed '@layouts/30-hero-layouts/05-hero-layout-1/hero-layout-1.twig' with { hero_layout_1_modifiers : layout_modifiers } %}
      {% block hero_layout_1_primary_1_block %}
        {% include '@molecules/02-basic-headline-treatments/10-stacked-2/stacked-headline-2.twig' with {
          stacked_headline_2_headline: hero_basic_headline,
          stacked_headline_2_slug: hero_basic_slug,
        } only %}
        {% if hero_basic_published is not empty %}
          <div class="rplc-hero-basic__dates-wrapper">
            {% include '@atoms/01-text/35-meta/meta.twig' with { meta_text: hero_basic_published } only %}
          </div>
        {% endif %}
      {% endblock %}
      {% block hero_layout_1_secondary_1_block %}
        {{ hero_basic_social_share }}
      {% endblock %}
    {% endembed %}
  </div>
</div>