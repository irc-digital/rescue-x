{#
/**
 * Available variables:
 * - stories_section_heading_title - Title text above the component.
 * - stories_section_heading_icon - Optional icon displayed in front of the title.
 * - stories_section_heading_description - Short description of component content.
 * - stories_slides - Slider content.
 */
#}
<div class="rplc-stories">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: stories_section_heading_title,
    section_heading_description: stories_section_heading_description,
    section_heading_icon: stories_section_heading_icon,
    section_heading_modifiers: ["inverse"]
  } only %}

  <div class="rplc-stories__content">
    {% embed '@layouts/15-slider-layouts/05-slider-layout-1/slider-layout-1.twig' with {
      'slider_layout_1_slides': stories_slides,
      } %}
    {% endembed %}
  </div>
</div>
