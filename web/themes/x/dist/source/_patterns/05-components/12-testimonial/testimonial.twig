<div{% if testimonial_id %} id="{{ testimonial_id }}"{% endif %} class="rplc-testimonial{% for testimonial_modifier in testimonial_modifiers %} rplc-testimonial--{{ testimonial_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: testimonial_section_heading_title,
    section_heading_description: testimonial_section_heading_description,
    section_heading_icon: testimonial_section_heading_icon,
  } only %}
  <div class="rplc-testimonial__content">
    <div class="rplc-testimonial__wrapper">
      <h3 class="rplc-testimonial__title">{{ testimonial_title }}</h3>
      <div class="rplc-testimonial__quote-wrapper">
        <div class="rplc-testimonial__quote-mark-wrapper">
          {% include '@atoms/05-icon/icon.twig' with {
            icon_name: 'quote-mark',
            icon_modifiers: ['fill-branded']
          } only %}
        </div>
        <div class="rplc-testimonial__quote-text-wrapper">
          <blockquote class="rplc-testimonial__quote">
            <p class="rplc-testimonial__quote-text">{{ testimonial_quote_text }}</p>
            {% include '@molecules/05-person-info/05-person-info-1/person-info-1.twig' with {
              person_info_1_name: testimonial_name,
              person_info_1_title: testimonial_title,
              person_info_1_responsive_image_source_set: testimonial_responsive_image_source_set,
              person_info_1_responsive_image_alt: testimonial_responsive_image_alt,
            } only %}
          </blockquote>
        </div>
        <div class="rplc-testimonial__link-wrapper">
        {% include '@atoms/30-button/button.twig' with {
          button_url: testimonial_url,
          button_text: testimonial_cta,
          button_modifiers: ['display-block'],
        } only %}
        </div>
      </div>
    </div>
    <div class="rplc-testimonial__footer-wrapper">
      {% include '@molecules/40-authority/authority.twig' with {
        authority_message: testimonial_authority_message,
      } only %}
    </div>
  </div>
</div>


