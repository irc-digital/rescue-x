<div{% if goals_id %} id="{{ goals_id }}"{% endif %} class="rplc-goals">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: goals_section_heading_title,
    section_heading_icon: goals_section_heading_icon
  } only %}

  <div class="rplc-goals__content">
    <div class="rplc-goals__intro">{{ goals_section_heading_description }}</div>
    <div class="rplc-goals__wrapper">
      {% embed '@layouts/15-slider-layouts/10-slider-layout-2/slider-layout-2.twig' with {
        slider_layout_2_slides: goals_items,
      } %}
      {% endembed %}
    </div>
  </div>
</div>
