{#
/**
 * Available variables:
 * - teaser_simple_image_link_url - The URL of the resource being teased
 * - teaser_simple_image_link_title - Title
 * - teaser_simple_image_modifiers - Modifiers
 * Available blocks:
 * - none
 */
#}
<div class="rplc-teaser-simple-image-link{% for teaser_simple_image_link_modifier in teaser_simple_image_link_modifiers %} rplc-teaser-simple-image-link--{{ teaser_simple_image_link_modifier }}{% endfor %}">
  <a href="{{ teaser_simple_image_link_url }}" class="rplc-teaser-simple-image-link__wrapper-link">
    <div class="rplc-teaser-simple-image-link__image-wrapper">
      {% include '@atoms/50-images/10-responsive-image/responsive-image.twig' with {
        responsive_image_source_set: teaser_simple_image_link_image_source_set,
        responsive_image_sizes: teaser_simple_image_link_image_sizes,
        responsive_image_fallback: teaser_simple_image_link_image_fallback,
        responsive_image_alt: teaser_simple_image_link_image_alt
      } only %}
    </div>
    <div class="rplc-teaser-simple-image-link__text-wrapper">
      <h5 class="rplc-teaser-simple-image-link__title">{{ teaser_simple_image_link_title }}</h5>
    </div>
  </a>
</div>