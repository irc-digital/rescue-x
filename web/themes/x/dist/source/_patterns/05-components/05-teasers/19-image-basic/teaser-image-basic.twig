<div class="rplc-teaser-image-basic{% for teaser_image_basic_modifier in teaser_image_basic_modifiers %} rplc-teaser-image-basic--{{ teaser_image_basic_modifier }}{% endfor %}">
  <a href="{{ teaser_image_basic_url }}" class="rplc-teaser-image-basic__wrapper-link" data-rpla-hover-target>
    <div class="rplc-teaser-image-basic__image-wrapper">
      {% include '@atoms/52-responsive-image/responsive-image.twig' with {
        responsive_image_source_set: teaser_image_basic_image_source_set,
        responsive_image_sizes: "(min-width: 641px) 376px, 256px",
        responsive_image_fallback: teaser_image_basic_image_fallback,
        responsive_image_alt: teaser_image_basic_image_alt
      } only %}
    </div>
    <div class="rplc-teaser-image-basic__title">{{ teaser_image_basic_title }}</div>
  </a>
</div>