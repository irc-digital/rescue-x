{#
/**
 * Available variables:
 * - teaser_image_link_box_url - The URL of the resource being teased
 * - teaser_image_link_box_title - Title text
 * - teaser_image_link_box_summary - Short description
 * - teaser_image_link_box_image_source_set - Image source set
 * - teaser_image_link_box_image_sizes - Image sizes
 * - teaser_image_link_box_image_fallback - Image fallback
 * - teaser_image_link_box_image_title - Image title attribute
 * - teaser_image_link_box_image_alt - Image alt attribute
 * Available blocks:
 * - teaser_image_link_box_image_block - The block that surrounds the responsive image
 */
#}
<div class="rplc-teaser-image-link-box{% for teaser_image_link_box_modifier in teaser_image_link_box_modifiers %} rplc-teaser-image-link-box--{{ teaser_image_link_box_modifier }}{% endfor %}">
  <a href="{{ teaser_image_link_box_url }}" class="rplc-teaser-image-link-box__wrapper-link">
    <figure class="rplc-teaser-image-link-box__inner-wrapper">
      <div class="rplc-teaser-image-link-box__image-wrapper">
        {% block teaser_image_link_box_image_block %}
        {% include '@atoms/52-responsive-image/responsive-image.twig' with {
          responsive_image_source_set: teaser_image_link_box_image_source_set,
          responsive_image_sizes: teaser_image_link_box_image_sizes,
          responsive_image_fallback: teaser_image_link_box_image_fallback,
          responsive_image_alt: teaser_image_link_box_image_alt
        } only %}
        {% endblock %}
      </div>
      <figcaption class="rplc-teaser-image-link-box__text-wrapper">
        <div class="rplc-teaser-image-link-box__caption-wrapper">
          <h3 class="rplc-teaser-image-link-box__title">{{ teaser_image_link_box_title }}</h3>
          <p class="rplc-teaser-image-link-box__summary">{{ teaser_image_link_box_summary }}</p>
        </div>
      </figcaption>
    </figure>
  </a>
</div>