{% if video_transcript_text is not empty %}
  {% set video_transcript_heading %}
    {% include '@molecules/20-section-heading/section-heading.twig' with {
      section_heading_title: ("Video Transcript" | trans),
    } only %}
  {% endset %}
  <div class="rplm-video-transcript">
    <div class="rplm-video-transcript__content">
      {% include '@atoms/70-toggle/toggle.twig' with {
        toggle_collapsed_text: ('Read the full video transcription' | trans),
        toggle_expanded_text: ('See less' | trans),
        toggle_content: (video_transcript_heading ~ video_transcript_text),
        toggle_modifiers: ['body'],
      } only %}
    </div>
  </div>
{% endif %}