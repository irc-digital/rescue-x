<div class="rplc-slider-stories{% for slider_stories_modifier in slider_stories_modifiers %} rplc-slider-stories--{{ slider_stories_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: slider_stories_section_heading_title,
    section_heading_description: slider_stories_section_heading_description,
    section_heading_icon: slider_stories_section_heading_icon
  } only %}
  <div class="rplc-slider-stories__content">
    <ul class="rplc-slider-stories__slides">
      {% for slider_stories_slide in slider_stories_slides %}
        <li class="rplc-slider-stories__slide">{{ slider_stories_slide }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
