<div{% if question_id %} id="{{ question_id }}"{% endif %} class="rplc-question" data-rpl-question-answer="{{ question_correct_answer }}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: question_section_heading_title,
    section_heading_description: question_section_heading_description,
    section_heading_icon: question_section_heading_icon
  } only %}
  <div class="rplc-question__content">
    {% include '@molecules/60-ear/ear.twig' with {
      ear_icon: 'question',
    } only %}
    <div class="rplc-question__text-wrapper">
      <div class="rplc-question__question-wrapper">
        {% if question_prefix %}
          <div class="rplc-question__prefix">{{ question_prefix }}</div>
        {% endif  %}

        <div class="rplc-question__question">{{ question_text }}</div>
      </div>
      <ul class="rplc-question__answer-options">
        {% for question_answer_option in question_answer_options %}
          <li class="rplc-question__answer-option" data-rpl-question-answer-index="{{ loop.index }}">{{ question_answer_option }}</li>
        {% endfor %}
      </ul>
      <div class="rplc-question__right-wrong-answer-wrapper" data-rpl-question-answer-confirmation>
        <div class="rplc-question__right-answer-message">{{ question_right_answer_message }}</div>
        <div class="rplc-question__wrong-answer-message">{{ question_wrong_answer_message }}</div>
      </div>
      <div class="rplc-question__answer-wrapper" data-rpl-question-answer-details>
        {% if question_responsive_image_source_set %}
        <div class="rplc-question__answer-image-wrapper">
          {% include '@atoms/52-responsive-image/responsive-image.twig' with {
            responsive_image_source_set: question_responsive_image_source_set,
            responsive_image_sizes: "(min-width: 768px) 448px,(min-width: 321px) calc(100vw - 2rem),320px",
            responsive_image_fallback: question_responsive_image_fallback,
            responsive_image_alt: question_responsive_image_alt
          } only %}
        </div>
        {% endif %}
        <div class="rplc-question__answer-info{% if not question_responsive_image_source_set %} rplc-question__answer-info--no-answer-image{% endif %}">{{ question_answer_info }}</div>
      </div>
    </div>
  </div>
</div>