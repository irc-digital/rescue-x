{% spaceless %}

  {% set modal_modifiers = modal_modifiers ?: [] %}

  {% set close_button = nulll  %}
  {% for modal_modifier in modal_modifiers %}
    {% set close_button = modal_modifier %}
  {% endfor %}

  {% if close_button is null %}
    {% set modal_modifiers = modal_modifiers | merge (['close-button-dark']) %}
  {% endif %}
{% endspaceless %}
