{% if basic_teaser_list_content %}
<div{% if basic_teaser_list_id %} id="{{ basic_teaser_list_id }}"{% endif %} class="rplc-basic-teaser-list{% for basic_teaser_list_modifier in basic_teaser_list_modifiers %} rplc-basic-teaser-list--{{ basic_teaser_list_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: basic_teaser_list_section_heading_title,
    section_heading_description: basic_teaser_list_section_heading_description,
    section_heading_icon: basic_teaser_list_section_heading_icon
  } only %}
  <div class="rplc-basic-teaser-list__content">
    {% include '@layouts/03-one-column-list/one-column-list.twig' with {
      one_column_list_content: basic_teaser_list_content,
    } only %}
  </div>
  {% if basic_teaser_list_more is not empty %}
    <div class="rplc-basic-teaser-list__more-wrapper">
      {% include '@molecules/53-pagers/50-more//more.twig' with {
        more_text: basic_teaser_list_more,
      } only %}
    </div>
  {% endif %}
</div>
{% endif %}