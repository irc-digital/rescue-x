{% if news_and_features_content %}
<div{% if news_and_features_id  %} id="{{ news_and_features_id }}"{% endif %} class="rplc-news-and-features{% for news_and_features_modifier in news_and_features_modifiers %} rplc-news-and-features--{{ news_and_features_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: news_and_features_section_heading_title,
    section_heading_description: news_and_features_section_heading_description,
    section_heading_icon: news_and_features_section_heading_icon
  } only %}
  <div class="rplc-news-and-features__content">
    {% include '@layouts/05-two-column-list/two-column-list.twig' with {
      two_column_list_content: news_and_features_content,
      two_column_list_modifiers: ["highlighted"]
    } only %}
  </div>
  {% if news_and_features_more is not empty %}
    <div class="rplc-news-and-features__more-wrapper">
      {% include '@molecules/53-pagers/50-more//more.twig' with {
        more_text: news_and_features_more,
      } only %}
    </div>
  {% endif %}
</div>
{% endif %}