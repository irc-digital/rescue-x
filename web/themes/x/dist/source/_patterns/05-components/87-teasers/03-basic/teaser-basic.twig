{% spaceless %}

{% set teaser_basic_modifiers = teaser_basic_modifiers ?: [] %}

{% set date_after_summary = false %}
{% if  teaser_basic_date %}
  {% for teaser_basic_modifier in teaser_basic_modifiers %}
    {% if teaser_basic_modifier == 'date-after-summary' %}
      {% set date_after_summary = true %}
    {% endif %}
  {% endfor %}
{% endif %}

{% if not date_after_summary %}
  {% set teaser_basic_modifiers = teaser_basic_modifiers | merge (['date-before-summary']) %}
{% endif %}

{% endspaceless %}
<div class="rplc-teaser-basic{% for teaser_basic_modifier in teaser_basic_modifiers %} rplc-teaser-basic--{{ teaser_basic_modifier }}{% endfor %}">
  <a href="{{ teaser_standard_url }}" class="rplc-teaser-basic__wrapper-link">
    <div class="rplc-teaser-basic__slug">{{ teaser_basic_slug }}</div>
    <h3 class="rplc-teaser-basic__title">{{ teaser_basic_title }}</h3>
    <div class="rplc-teaser-basic__prefix">{{ teaser_basic_summary_prefix }}</div>
    {% if teaser_basic_date %}<div class="rplc-teaser-basic__date">{{ teaser_basic_date }}</div>{% endif %}
    <div class="rplc-teaser-basic__summary">
      <div class="rpla-paragraph">{{ teaser_basic_summary }}</div>
    </div>
    <div class="rplc-teaser-basic__suffix">{{ teaser_basic_summary_suffix }}</div>
  </a>
</div>