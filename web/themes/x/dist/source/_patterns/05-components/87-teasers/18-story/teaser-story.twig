
<div class="rplc-teaser-story{% for teaser_story_modifier in teaser_story_modifiers %} rplc-teaser-story--{{ teaser_story_modifier }}{% endfor %}">
  <div class="rplc-teaser-story__content">
    <div class="rplc-teaser-story__quote-mark-wrapper">
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'quote-mark',
        icon_modifiers: ['fill-white']
      } only %}
    </div>
    <div class="rplc-teaser-story__text-wrapper">
      <div class="rplc-teaser-story__quote">{{ teaser_story_quote }}</div>
      <div class="rplc-teaser-story__image-summary-wrapper">
        <div class="rplc-teaser-story__image-wrapper">
          {% include '@atoms/52-responsive-image/responsive-image.twig' with {
            responsive_image_source_set: teaser_story_responsive_image_source_set,
            responsive_image_sizes: "(min-width: 641px) 192px,112x",
            responsive_image_fallback: teaser_story_responsive_image_fallback,
            responsive_image_alt: teaser_story_responsive_image_alt
          } only %}
        </div>
        <div class="rplc-teaser-story__summary-wrapper">
          <div class="rplc-teaser-story__summary">{{ teaser_story_summary }}</div>
          {% include '@atoms/10-link/link.twig' with {
            link_text: teaser_story_link_text,
            link_url: teaser_story_link_url,
            link_modifiers: [],
          } only %}

        </div>
      </div>
    </div>
  </div>
</div>