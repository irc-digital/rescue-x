<div class="rplc-teaser-thumb">
  <a href="{{ teaser_thumb_url }}" class="rplc-teaser-thumb" data-rpla-hover-target>
    <div class="rplc-teaser-thumb__image-wrapper"{% if teaser_thumb_content_type %} data-rpl-content-type="{{ teaser_thumb_content_type }}"{% endif %}>
      {% include '@atoms/52-responsive-image/responsive-image.twig' with {
        responsive_image_source_set: teaser_thumb_image_source_set,
        responsive_image_sizes: "200px",
        responsive_image_fallback: teaser_thumb_image_fallback,
        responsive_image_alt: teaser_thumb_image_alt,
      } only %}
    </div>
    <div class="rplc-teaser-thumb__text-wrapper">
      {{ teaser_thumb_title }}
    </div>
  </a>
</div>


