<div class="rplc-teaser-report">
  <a href="{{ teaser_report_url }}" class="rplc-teaser-report__wrapper-link">
    <div class="rplc-teaser-report__image-wrapper">
      {% include '@atoms/52-responsive-image/responsive-image.twig' with {
        responsive_image_source_set: teaser_report_image_source_set,
        responsive_image_sizes: "(min-width: 641px) 256px, (min-width: 321px) calc(100vw - 2rem), 320px",
        responsive_image_fallback: teaser_report_image_fallback,
        responsive_image_alt: teaser_report_image_alt,
      } only %}
    </div>
    <div class="rplc-teaser-report__title-wrapper">
      {% include "@atoms/10-link/link.twig" with {
        link_text: teaser_report_title,
        link_modifiers: ['type-one', 'size-extra-small'],
      } only %}
    </div>
  </a>
</div>
