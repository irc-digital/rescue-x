{% spaceless %}

{% set call_to_action_4_modifiers = call_to_action_4_modifiers ?: [] %}

{% endspaceless %}
<div class="rplc-call-to-action-4{% for call_to_action_4_modifier in call_to_action_4_modifiers %} rplc-call-to-action-4--{{ call_to_action_4_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: call_to_action_4_section_heading_title,
    section_heading_description: call_to_action_4_section_heading_description,
    section_heading_icon: call_to_action_4_section_heading_icon
  } only %}
  <a href="{{ call_to_action_4_url }}" class="rplc-call-to-action-4__content" data-rpla-hover-target>
    <div class="rplc-call-to-action-4__cta-wrapper">
      <div class="rplc-call-to-action-4__image-wrapper">
        {% include '@atoms/54-art-directed-image/art-directed-image.twig' with {
          art_directed_image_fallback: call_to_action_4_art_directed_image_fallback,
          art_directed_image_sources: call_to_action_4_art_directed_image_sources,
          art_directed_image_alt: call_to_action_4_art_directed_image_alt
        } only %}
      </div>
      <div class="rplc-call-to-action-4__message-wrapper">
        <div class="rplc-call-to-action-4__text-wrapper">
          <h3 class="rplc-call-to-action-4__title">{{ call_to_action_4_title }}</h3>
          <div class="rplc-call-to-action-4__subtitle">{{ call_to_action_4_subtitle }}</div>
        </div>
        <div class="rplc-call-to-action-4__button-wrapper">
          {% include '@atoms/30-button/button.twig' with {
            button_text: call_to_action_4_button_text,
            button_icon_name: call_to_action_4_button_icon,
            button_modifiers: ['display-block-mobile-only'],
          } only %}
        </div>
      </div>
    </div>
    <div class="rplc-call-to-action-4__footer-wrapper">
      {% include '@molecules/40-authority/authority.twig' with {
        authority_message: call_to_action_4_authority_message,
      } only %}
    </div>
  </a>
</div>
