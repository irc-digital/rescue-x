{% spaceless %}

{% set call_to_action_2_modifiers = call_to_action_2_modifiers ?: [] %}

{% set has_background = false %}
{% set has_image_position = false %}
{% for call_to_action_2_modifier in call_to_action_2_modifiers %}
  {% if call_to_action_2_modifier starts with 'background-' %}
    {% set has_background = true %}
  {% endif %}
  {% if call_to_action_2_modifier starts with 'image-' %}
    {% set has_image_position = true %}
  {% endif %}
{% endfor %}

{% if not has_background %}
  {% set call_to_action_2_modifiers = call_to_action_2_modifiers | merge (['background-light']) %}
{% endif %}

{% if not has_image_position %}
  {% set call_to_action_2_modifiers = call_to_action_2_modifiers | merge (['image-left']) %}
{% endif %}

{% endspaceless %}
<div{% if call_to_action_2_id %} id="{{ call_to_action_2_id }}"{% endif %} class="rplc-call-to-action-2{% for call_to_action_2_modifier in call_to_action_2_modifiers %} rplc-call-to-action-2--{{ call_to_action_2_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: call_to_action_2_section_heading_title,
    section_heading_description: call_to_action_2_section_heading_description,
    section_heading_icon: call_to_action_2_section_heading_icon
  } only %}
  <div class="rplc-call-to-action-2__content">
    <a href="{{ call_to_action_2_url }}" class="rplc-call-to-action-2__content-wrapper" data-rpla-hover-target>
      <div class="rplc-call-to-action-2__image-wrapper">
        {% include '@atoms/52-responsive-image/responsive-image.twig' with {
          responsive_image_source_set: call_to_action_2_responsive_image_source_set,
          responsive_image_sizes: "(min-width: 1240px) 696px,(min-width: 321px) 100vw,320px",
          responsive_image_fallback: call_to_action_2_responsive_image_fallback,
          responsive_image_alt: call_to_action_2_responsive_image_alt
        } only %}
      </div>
      <div class="rplc-call-to-action-2__message-wrapper">
        <div class="rplc-call-to-action-2__text-wrapper">
          <h3 class="rplc-call-to-action-2__title">{{ call_to_action_2_title }}</h3>
          <div class="rplc-call-to-action-2__subtitle">{{ call_to_action_2_subtitle }}</div>
        </div>
        <div class="rplc-call-to-action-2__button-wrapper">
          {% include '@atoms/30-button/button.twig' with {
            button_text: call_to_action_2_button_text,
            button_icon_name: call_to_action_2_button_icon,
            button_modifiers: ['display-block-mobile-only'],
          } only %}
        </div>
      </div>
    </a>
  </div>
</div>
