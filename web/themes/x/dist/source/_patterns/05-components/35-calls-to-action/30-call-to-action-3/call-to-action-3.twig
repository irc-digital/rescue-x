{% spaceless %}

{% set call_to_action_3_modifiers = call_to_action_3_modifiers ?: [] %}

{% set has_text_position = false %}
{% for call_to_action_3_modifier in call_to_action_3_modifiers %}
  {% if call_to_action_3_modifier starts with 'text-position-' %}
    {% set has_text_position = true %}
  {% endif %}
{% endfor %}

{% if not has_text_position %}
  {% set call_to_action_3_modifiers = call_to_action_3_modifiers | merge (['text-position-center']) %}
{% endif %}

{% endspaceless %}
<div class="rplc-call-to-action-3{% for call_to_action_3_modifier in call_to_action_3_modifiers %} rplc-call-to-action-3--{{ call_to_action_3_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: call_to_action_3_section_heading_title,
    section_heading_description: call_to_action_3_section_heading_description,
    section_heading_icon: call_to_action_3_section_heading_icon
  } only %}
  <a href="{{ call_to_action_3_url }}" class="rplc-call-to-action-3__content" data-rpla-hover-target>
    <div class="rplc-call-to-action-3__image-wrapper">
      {% include '@atoms/54-art-directed-image/art-directed-image.twig' with {
        art_directed_image_fallback: call_to_action_3_art_directed_image_fallback,
        art_directed_image_sources: call_to_action_3_art_directed_image_sources,
        art_directed_image_alt: call_to_action_3_art_directed_image_alt
      } only %}
    </div>
    <div class="rplc-call-to-action-3__message-wrapper">
      <div class="rplc-call-to-action-3__text-wrapper">
        <h3 class="rplc-call-to-action-3__title">{{ call_to_action_3_title }}</h3>
        <div class="rplc-call-to-action-3__subtitle">{{ call_to_action_3_subtitle }}</div>
      </div>
      <div class="rplc-call-to-action-3__button-wrapper">
        {% include '@atoms/30-button/button.twig' with {
          button_text: call_to_action_3_button_text,
          button_icon_name: call_to_action_3_button_icon,
        } only %}
      </div>
    </div>
  </a>
</div>
