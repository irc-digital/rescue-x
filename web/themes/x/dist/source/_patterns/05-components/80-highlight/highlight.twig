{#
/**
 * Available variables:
 * - highlight_link_url - The URL of the optional link
 * - highlight_link_text - Text of optional link
 * - highlight_list_content - highlight list content
 */
#}
{% if highlight_list_content %}
<div class="rplc-highlight{% for highlight_modifier in highlight_modifiers %} rplc-highlight--{{ highlight_modifier }}{% endfor %}" data-rpl-state="collapsed">
  <div class="rplc-highlight__content">
    <a href="#" class="rplc-highlight__show-hide">
      <h5 class="rplc-highlight__header">{{ "Highlights" | trans }}</h5>
    </a>
    <div class="rplc-highlight__list-wrapper">
      {% include '@atoms/40-list/05-unordered/unordered-list.twig' with {
        unordered_list_items: highlight_list_content,
        unordered_list_modifiers: ['small']
      } only %}

      {% if highlight_link_url %}
        {% include '@atoms/10-link/link.twig' with {
          link_text: highlight_link_text,
          link_url: highlight_link_url,
          link_modifiers: ['type-two', 'subtype-inverse', 'subtype-no-hover-effect', 'size-small'],
        } only %}
      {% endif %}
    </div>
  </div>
</div>



{% endif %}
