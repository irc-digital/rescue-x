{% set caption_modifier = [] %}
{% if 'caption-style-low-key' in image_well_width_modifiers %}
  {% set caption_modifier = caption_modifier|merge(['style-low-key']) %}
{% endif %}
<div class="rplc-image-well-width{% for image_well_width_modifier in image_well_width_modifiers %} rplc-image-well-width--{{ image_well_width_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: image_well_width_section_heading_title,
    section_heading_description: image_well_width_section_heading_description,
    section_heading_icon: image_well_width_section_heading_icon
  } only %}
  <figure class="rplc-image-well-width__content">
    <div class="rplc-image-well-width__image-wrapper">
      {% include '@atoms/15-images/10-responsive-image/responsive-image.twig' with {
        responsive_image_source_set: image_well_width_responsive_image_source_set,
        responsive_image_sizes: image_well_width_responsive_image_sizes,
        responsive_image_fallback: image_well_width_responsive_image_fallback,
        responsive_image_alt: image_well_width_responsive_image_alt
      } only %}
    </div>
    <div class="rplc-image-well-width__caption-wrapper">
      {% include '@molecules/03-caption/caption.twig' with {
        caption_text: image_well_width_caption_text,
        caption_credit: image_well_width_caption_credit,
        caption_modifiers: caption_modifier,
      } only %}
    </div>
  </figure>
</div>



