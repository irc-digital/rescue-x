<div class="rplc-image-window-width{% for image_window_width_modifier in image_window_width_modifiers %} rplc-image-window-width--{{ image_window_width_modifier }}{% endfor %}">
  {% include '@molecules/20-section-heading/section-heading.twig' with {
    section_heading_title: image_window_width_section_heading_title,
    section_heading_description: image_window_width_section_heading_description,
    section_heading_icon: image_window_width_section_heading_icon
  } only %}
  <figure class="rplc-image-window-width__content">
    <div class="rplc-image-window-width__image-wrapper">
      {% include '@atoms/52-responsive-image/responsive-image.twig' with {
        responsive_image_source_set: image_window_width_responsive_image_source_set,
        responsive_image_sizes: "(min-width: 321px) 100vw, 320px",
        responsive_image_fallback: image_window_width_responsive_image_fallback,
        responsive_image_alt: image_window_width_responsive_image_alt
      } only %}
    </div>
    <div class="rplc-image-window-width__caption-wrapper">
      {% include '@molecules/03-caption/caption.twig' with {
        caption_text: image_window_width_caption_text,
        caption_credit: image_window_width_caption_credit,
      } only %}
    </div>
  </figure>
</div>