{#
/**
 * Search form
 *
 * Available variables:
 *   search_form_placeholder_text  - Short description of the title
 */
#}
<div class="rplm-search-form">
  <div class="rplm-search-form__text-input-wrapper">
    {% include '@atoms/35-form/05-text-input/text-input.twig' with {
      text_input_name: "search",
      text_input_label: ('Search' | trans),
      text_input_placeholder: search_form_placeholder_text,
      text_input_modifiers: ['type-three', 'placeholder-bold'],
    } only %}
  </div>
  <div class="rplm-search-form__submit-wrapper">
    {% include '@atoms/35-form/40-submit/10-icon-only/icon-only-submit.twig' with {
      icon_only_link_alt_text: ('Search' | trans),
      icon_only_link_name: 'search',
    } only %}
  </div>
</div>


