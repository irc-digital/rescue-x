<div class="rplm-range">
  <div class="rplm-range__left-wrapper">
    <div class="rplm-range__left-text" data-rpl-range-key="{{ range_left_key }}">{{ range_left_label }}</div>
    <div class="rplm-range__left-icon-wrapper">
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-left',
        icon_modifiers: ['fill-gray'],
      } only %}
    </div>
  </div>
  <div class="rplm-range__slider-wrapper">
    <input class="rplm-range__slider" type="range" min="-500" max="500" value="0">
  </div>
  <div class="rplm-range__right-wrapper">
    <div class="rplm-range__right-icon-wrapper">
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-right',
        icon_modifiers: ['fill-gray'],
      } only %}
    </div>
    <div class="rplm-range__right-text" data-rpl-range-key="{{ range_right_key }}">{{ range_right_label }}</div>
  </div>
</div>