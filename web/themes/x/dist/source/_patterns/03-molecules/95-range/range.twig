{#
/**
 * Tange
 *
 * Available variables:
 *   range_left_label  - Text for the left side of the range
 *   range_right_label - Text for the right side of the range
 */
#}
<div class="rplm-range" data-rpl-range data-rpl-range-state="center">
  <div class="rplm-range__left-wrapper" data-rpl-range-left-jump>
    <div class="rplm-range__left-text">{{ range_left_label }}</div>
    <div class="rplm-range__left-icon-wrapper">
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-left',
        icon_modifiers: ['fill-gray'],
      } only %}
    </div>
  </div>
  <div class="rplm-range__slider-wrapper">
    <input class="rplm-range__slider" type="range" min="-500" max="500" value="0" data-rpl-range-slider data-rpl-range-left-key="{{ range_left_key }}" data-rpl-range-center-key="{{ range_center_key }}" data-rpl-range-right-key="{{ range_right_key }}">
  </div>
  <div class="rplm-range__right-wrapper" data-rpl-range-right-jump>
    <div class="rplm-range__right-icon-wrapper">
      {% include '@atoms/05-icon/icon.twig' with {
        icon_name: 'caret-right',
        icon_modifiers: ['fill-gray'],
      } only %}
    </div>
    <div class="rplm-range__right-text">{{ range_right_label }}</div>
  </div>
</div>