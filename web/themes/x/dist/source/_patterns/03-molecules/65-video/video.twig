<div{% if video_id %} id="{{ video_id }}"{% endif %} class="rplm-video">
  <video
    class="rplm-video__player video-js vjs-16-9"
    controls
    preload="auto"
    {% if video_poster is not empty %}poster="{{ video_poster }}"{% endif %}
    width="1084"
    height="610"
    data-setup='{ "techOrder": ["youtube"] }'>
    {% for video_source in video_sources %}
      <source src="{{ video_source.source }}" type="{{ video_source.type }}" />
    {% endfor %}
    <p class="vjs-no-js">
      To view this video please enable JavaScript, and consider upgrading to a
      web browser that
      <a href="http://videojs.com/html5-video-support/" target="_blank">
        supports HTML5 video
      </a>
    </p>
  </video>
</div>

