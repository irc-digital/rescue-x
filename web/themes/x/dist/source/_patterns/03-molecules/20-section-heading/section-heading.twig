{#
/**
 * Available variables:
 * - section_heading_modifier array optional
 *     inverse: switch to a different treatment when placed on a yellow background. Left
 *     border of title field is switched to white.
 * - section_heading_title text mandatory
 *     The title of the section
 * - section_heading_description text optional
 &     A basic text description.
 * Available blocks:
 * - None
 */
#}
{% if section_heading_title %}
<div class="rplm-section-heading{% for section_heading_modifier in section_heading_modifiers %} rplm-section-heading--{{ section_heading_modifier }}{% endfor %}">
    <div class="rplm-section-heading__title-icon-wrapper">
{% if section_heading_icon %}
      <svg class="rplm-section-heading__icon rplm-section-heading__icon--{{ section_heading_icon }}">
        <use xmlns:xlink='http://www.w3.org/1999/xlink' xlink:href='#rpl-svg-{{ section_heading_icon }}'></use></svg>
      </svg>
{% endif %}
      <h2 class="rplm-section-heading__title">{{ section_heading_title }}</h2>
    </div>
    {% if section_heading_description %}<div class="rpla-paragraph">{{ section_heading_description }}{% endif %}</div>
</div>
{% endif %}
