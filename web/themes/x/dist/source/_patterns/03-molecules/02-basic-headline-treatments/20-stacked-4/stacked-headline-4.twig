{#
/**
 * Stacked headline 4
 *
 * Available variables:
 *   stacked_headline_4_slug - Smaller text on top of headline
 *   stacked_headline_4_headline - Larger header below
 *   stacked_headline_4_summary - Summary text
 *   stacked_headline_4_link_title - Text for link
 *   stacked_headline_4_link_url - URL for link
 */
#}
<div class="rplm-stacked-headline-4">
  {% include '@atoms/01-text/25-slug/slug.twig' with {
    slug_text: stacked_headline_4_slug,
    slug_modifiers: ['size-large'],
  } only %}
  <h1 class="rpla-heading rpla-heading--extra-large">{{ stacked_headline_4_headline }}</h1>
  {% if stacked_headline_4_summary is not empty %}
    <div class="rplm-stacked-headline-4__summary-wrapper">{% include '@atoms/01-text/05-paragraph/paragraph.twig' with { paragraph_text: stacked_headline_4_summary } only %}</div>
  {% endif %}
  {% if stacked_headline_4_link_title is not empty and stacked_headline_4_link_url is not empty %}
    {% include '@atoms/10-link/link.twig' with {
      link_text: stacked_headline_4_link_title,
      link_url: stacked_headline_4_link_url,
    } only %}
  {% endif %}
</div>





