{#
/**
 * Stacked headline 3
 *
 * Available variables:
 *   stacked_headline_3_slug - Smaller text on top of headline
 *   stacked_headline_3_headline - Larger header below
 *   stacked_headline_3_crisis_mode - Boolean, whether crisis mode is enabled or not
 *   stacked_headline_3_social_share_sites - Array of social share sites for icons
 */
#}
<div class="rplm-stacked-headline-3">
  <div class="rplm-stacked-headline-3__text-wrapper">
    <h6 class="rplm-stacked-headline-3__slug">{{ stacked_headline_3_slug }}</h6>
    <div class="rplm-stacked-headline-3__headline-wrapper">
      <h1 class="rplm-stacked-headline-3__headline">{{ stacked_headline_3_headline }}</h1>
      {% if stacked_headline_3_crisis_mode %}
        <div class="rplm-stacked-headline-3__crisis-watch-wrapper">
          {% include '@atoms/01-text/50-alert/alert.twig' with {
            alert_text: 'Crisis Watch' | trans,
          } only %}
        </div>
      {% endif %}
    </div>
  </div>
  <div class="rplm-stacked-headline-3__social-wrapper">
    {% include '@molecules/50-social-share/social-share.twig' with {
      social_share_sites: stacked_headline_3_social_share_sites,
      social_share_modifiers: ['subtype-inverse'],
    } only %}
  </div>
</div>