{#
/**
 * Available variables:
 *     contributor_modifiers                    - Modifier classes
 *     contributor_prefix                       - Text that comes before the contributor, usign to chain entries in a list. Will be translated.
 *     contributor_name                         - The name of the contributor
 *     contributor_title                        - The contributors role or title
 *     contributor_responsive_image_source_set  - The source set of the photo of the contributor. If this is left blank then a default image is used
 *     contributor_responsive_image_sizes       - The sizes media query for the images
 *     contributor_responsive_image_alt         - The alt attributor for the contributor image
 *     contributor_social                       - Links to their social accounts. This is an associative array:
 *        key                       - The social site key, used to generate the svg icon
 *        value                     - The URL of the contributor's social media account
 * Available blocks:
 * - none
 */
#}
{% set contributor_first_in_list = contributor_first_in_list ? contributor_first_in_list : FALSE %}
<figure class="rplm-person-info{% for person_info_modifier in person_info_modifiers %} rplm-person-info--{{ person_info_modifier }}{% endfor %}">
  {% if person_info_responsive_image_source_set %}
    <div class="rplm-person-info__image-wrapper">
      {% include '@atoms/15-images/10-responsive-image/responsive-image.twig' with {
            responsive_image_source_set: person_info_responsive_image_source_set,
            responsive_image_sizes: person_info_responsive_image_sizes,
            responsive_image_fallback: person_info_responsive_image_fallback,
            responsive_image_alt: person_info_responsive_image_alt
          } only %}
    </div>
  {% else %}
    <div class="rplm-person-info__image-wrapper rplm-person-info__image-wrapper--default-image">
      {% include '@atoms/15-images/20-icon/icon.twig' with {
            icon_name: 'person',
          } only
      %}
    </div>
  {% endif %}
  <div class="rplm-person-info__byline">
    {% if person_info_prefix %}<span class="rplm-person-info__prefix">{{ person_info_prefix }}</span>{% endif %}
    <span class="rplm-person-info__name">{{ person_info_name }}</span>
      {% if person_info_social is not empty %}
        <div class="rplm-person-info__social-wrapper">
          {% include '@molecules/50-social/02-share/social-share.twig' with {
            social_share_sites: person_info_social,
            social_share_modifiers: ['subtype-snug'],
          } only %}
        </div>
      {% endif %}
    <div class="rplm-person-info__title">{{ person_info_title }}</div>
  </div>
</figure>

