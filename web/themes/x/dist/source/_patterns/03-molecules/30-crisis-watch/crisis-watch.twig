{% set type = null %}

{% for crisis_watch_modifier in crisis_watch_modifiers %}
  {% set type = crisis_watch_modifier %}
{% endfor %}

{% if type != 'with-prefix' %}
  {% set crisis_watch_link_text = "Crisis watch" %}
{% endif %}

<div class="rplm-crisis-watch {% for crisis_watch_modifier in crisis_watch_modifiers %} rplm-crisis-watch--{{ crisis_watch_modifier }}{% endfor %}">
  <div class="rplm-crisis-watch__wrapper">
    <div class="rplm-crisis-watch__icon-wrapper">
      {% include '@atoms/56-icon/icon.twig' with {
        icon_name: 'crisis'
      } %}
    </div>

    {% if type == 'with-prefix' %}
      <div class="rplm-crisis-watch__prefix">
        {{ "Crisis watch" | trans }}:
      </div>
    {% endif %}

    <div class="rplm-crisis-watch__link-wrapper">
      {% include '@atoms/10-link/link.twig' with {
        link_tag: crisis_watch_link_tag,
        link_url: crisis_watch_link_url,
        link_text: crisis_watch_link_text,
        link_modifiers: crisis_watch_link_modifiers,
        } only %}
    </div>
  </div>
</div>