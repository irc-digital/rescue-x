<form class='rplm-donation-teaser' accept-charset="UTF-8">
  <p class="rpla-paragraph">{{ donation_teaser_text }}</p>
  <div class="rplm-donation-teaser__donation-field-wrapper">
    {% include '@atoms/35-form/15-donation-input/donation-input.twig' with {
      donation_input_name: donation_teaser_donation_input_name,
      donation_input_label: donation_teaser_donation_input_label,
      donation_input_placeholder: donation_teaser_donation_input_placeholder,
      donation_input_required: donation_teaser_donation_input_required,
      donation_input_default_value: donation_teaser_donation_input_default_value,
      donation_input_prefix: donation_teaser_donation_input_prefix,
      donation_input_suffix: donation_teaser_donation_input_suffix,
    } only %}
  </div>
  <div class="rplm-donation-teaser__buttons-wrapper">
    {% for donation_teaser_button in donation_teaser_buttons %}
      {{ donation_teaser_button }}
    {% endfor %}
  </div>
</form>