{#
/**
 * Available variables:
 * - iconed_message_icon_name - Icon displayed before the text.
 * - iconed_message_icon_modifiers - Modifiers for the icon atom.
 * - iconed_message_text - Text displayed to the right of icon.
 */
#}
<div class="rplm-iconed-message">
  <div class="rplm-iconed-message__wrapper">
    <div class="rplm-iconed-message__text">
      <div class="rplm-iconed-message__icon">
        {% include '@atoms/05-icon/icon.twig' with {
          icon_name: iconed_message_icon_name,
          icon_modifiers: iconed_message_icon_modifiers,
        } only %}
      </div>
      {{ iconed_message_text }}
    </div>
  </div>
</div>